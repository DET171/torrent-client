{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "berry"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
			"jsx-quotes": ["error", "prefer-single"],
			"react/jsx-uses-react": "off",
			"react/react-in-jsx-scope": "off"
    }
}
